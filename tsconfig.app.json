{
	"compilerOptions": {
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		"incremental": true,
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"moduleDetection": "force",
		"noEmit": true,
		"jsx": "react-jsx",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": ".",
		"paths": {
			"@/@types": ["src/@types"],
			"@/components": ["src/components/"],
			"@/api/*": ["src/api/*"],
			"@/i18n/*": ["src/i18n/*"],
			"@/styles": ["src/styles/"],
			"@/utils": ["src/utils/"],
			"@/utils/*": ["src/utils/*"],
			"@/providers": ["src/providers/"],
			"@/hooks": ["src/hooks/"],
			"@/store": ["src/store/"],
			"@/store/*": ["src/store/*"],
			"@/leuxConfig": ["src/leuxConfig"],
			"@/pages/*": ["src/pages/*"]
		}
	},
	"include": ["src"]
}
